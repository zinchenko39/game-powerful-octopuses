{
  "name": "client-server-template-with-vite",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && node init.js && lerna clean && yarn && lerna bootstrap",
    "build": "lerna run build",
    "dev:client": "lerna run dev  --scope=client",
    "dev:server": "lerna run dev --scope=server",
    "linkup": "cd ./packages/client && yarn unlink -s && yarn link -s && cd ../server && yarn link 'client'",
    "dev": "lerna run dev",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "preview": "lerna run preview"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=15"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "1.3.9",
    "@types/jsesc": "^3.0.2",
    "identity-obj-proxy": "^3.0.0",
    "lerna": "5.4.3"
  },
  "dependencies": {
    "jsesc": "^3.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.34.0",
    "sequelize-typescript": "^2.1.5"
  }
}
